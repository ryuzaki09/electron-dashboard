{
  "name": "dashyb",
  "version": "2.0.2",
  "description": "Home Dashboard built via Electron to play media, control home devices, get weather data.",
  "main": "build/index.js",
  "scripts": {
    "build": "NODE_ENV=production npm run build:renderer && npm run build:main",
    "build:renderer": "rm -rf ./dist && webpack --config webpack.config.prod.js",
    "build:main": "rm -rf ./build && webpack --config webpack.config.electron.js",
    "build:pi": "npm run build && npm run bundle-backend && electron-builder --linux --armv7l",
    "start": "electron .",
    "test": "jest test/unit/",
    "test:acceptance": "mocha -r @babel/register test/acceptance/ --timeout 15000",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "start-electron": "NODE_ENV=development electron -r ./babel-register.cjs ./index.js",
    "oldstart-electron": "electron -r ./babel-register.js ./index.ts",
    "backend": "node -r ./babel-register.cjs ./server/backend-server.js",
    "frontend": "NODE_ENV=development BROWSER=none node -r ./babel-register.cjs server/frontend-server.js",
    "bundle-backend": "ncc build server/backend-server.js -o server-dist",
    "dev": "npm run frontend",
    "clean:install": "rm -rf node_modules && npm install",
    "tsc": "tsc"
  },
  "keywords": [
    "electron",
    "react",
    "babel",
    "webpack"
  ],
  "author": "Sinister <arlong2k8@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@picovoice/porcupine-react": "3.0.3",
    "@picovoice/web-voice-processor": "^4.0.9",
    "@types/multer": "1.4.12",
    "axios": "1.8.3",
    "dotenv": "^16.4.7",
    "electron-context-menu": "2.5.2",
    "express": "4.16.4",
    "multer": "1.4.5-lts.2",
    "openai": "4.90.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-router-dom": "7.3.0",
    "zustand": "5.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "7.9.0",
    "@babel/register": "7.25.9",
    "@ryusenpai/shared-components": "1.14.5",
    "@testing-library/react": "16.2.0",
    "@types/express": "4.17.21",
    "@types/jest": "25.2.1",
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.3",
    "@types/webpack-dev-middleware": "4.3.0",
    "@types/webpack-hot-middleware": "2.25.9",
    "@typescript-eslint/eslint-plugin": "3.6.1",
    "@typescript-eslint/parser": "3.6.1",
    "@vercel/ncc": "0.38.3",
    "babel-eslint": "10.0.1",
    "babel-loader": "^10.0.0",
    "body-parser": "1.20.3",
    "buffer": "6.0.3",
    "chalk": "^4.1.0",
    "concurrently": "9.1.2",
    "css-loader": "^3.1.0",
    "date-fns": "4.1.0",
    "electron": "30.5.1",
    "electron-builder": "26.0.12",
    "electron-devtools-installer": "4.0.0",
    "eslint": "5.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "html-webpack-plugin": "^4.5.0",
    "jest": "25.3.0",
    "js-yaml": "4.1.0",
    "mini-css-extract-plugin": "2.9.2",
    "prettier": "1.14.3",
    "sass-loader": "16.0.5",
    "shelljs": "0.9.2",
    "socket.io-client": "4.8.1",
    "style-loader": "0.23.1",
    "ts-node": "10.9.2",
    "typescript": "4.9.5",
    "webpack": "5.98.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-middleware": "4.3.0",
    "webpack-hot-middleware": "2.24.3",
    "webpack-merge": "5.0.9"
  },
  "build": {
    "appId": "com.dashboardhome.kiosk",
    "productName": "DashyB",
    "linux": {
      "target": [
        "deb"
      ],
      "files": [
        "build/**/*",
        "dist/**/*",
        "src/config/**/*",
        "server-dist/**/*",
        "node_modules/**/*",
        "package.json"
      ]
    },
    "asarUnpack": [
      "server/**/*",
      "babel-register.cjs"
    ],
    "extraFiles": [],
    "extraResources": [
      {
        "from": "server-dist",
        "to": "server",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": ".env.production",
        "to": ".env",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "src/config/intents.yml",
        "to": "config/intents.yml"
      },
      {
        "from": "public",
        "to": "public"
      },
      {
        "from": "tts_responses",
        "to": "tts_responses"
      }
    ],
    "deb": {
      "depends": [
        "libgtk-3-0",
        "libnotify4",
        "libnss3",
        "libxss1",
        "libxtst6",
        "xdg-utils",
        "libatspi2.0-0",
        "libuuid1",
        "libsecret-1-0"
      ]
    }
  },
  "jest": {
    "roots": [
      "test"
    ]
  }
}
